{
  "manifest_version": 2,
 
  "name": "Gmail Focus",
  "version": "0.1.2",
  "description": "Focus on your emails, one at a time",
  "author": "Miguel Piedrafita",
  "homepage_url": "https://miguelpiedrafita.com",
 
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["styles.js"],
    "matches": ["https://mail.google.com/*"]
  }],
  "web_accessible_resources": [
    "font/*.eot",
    "font/*.woff2",
    "font/*.woff",
    "font/*.ttf",
    "font/*.svg"
  ],
  "icons": {
    "128": "icon.png"
  }
}
